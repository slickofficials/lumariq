datasource db {
  provider = "postgresql"
  
}

generator client {
  provider = "prisma-client-js"
}

model KycVerification {
  id        String   @id @default(uuid())
  userId    String
  fullName  String
  idNumber  String
  status    String   @default("pending") // pending | approved | rejected
  reason    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}